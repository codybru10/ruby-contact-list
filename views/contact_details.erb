
<a href="/">Home</a>

<h3> Contact Details for <%= @contact.first_name() %> <%= @contact.last_name() %> </h3>



<ul>
  <li><label>First Name: </label> <%= @contact.first_name() %></li>
  <li><label>Last Name: </label> <%= @contact.last_name() %></li>
  <li><label>Job Title: </label> <%= @contact.job_title() %></li>
  <li><label>Company: </label> <%= @contact.company() %></li>
</ul>

<h4>Add Mailing Address Below</h4>

<form action="/address" method="post">
  <div class="form-group">
    <label for="address">Address:</label>
    <input type="text" name="address" id="address" class="form-control">
    <label for="city">City:</label>
    <input type="text" name="city" id="city" class="form-control">
    <label for="state">State:</label>
    <input type="text" name="state" id="state" class="form-control">
    <label for="zip">Zip:</label>
    <input type="text" name="zip" id="zip" class="form-control">
    <br>
    <button type="submit" class="btn btn-primary">Save Address</button>
  </div>

</form>
